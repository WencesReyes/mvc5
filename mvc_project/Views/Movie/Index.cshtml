
@using mvc_project.Entities;

@{
    ViewBag.Title = "Movies";
}


@model List<Movie>

<main>
    <h2>List of movies</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    In billboard
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in @Model)
            {
                var trClass = movie.InBillboard ? "bg-success" : string.Empty;
                var inBillboard = movie.InBillboard ? "Yes" : "No";

                <tr class="@trClass">
                    <td>
                        @movie.Name
                    </td>
                    <td>
                        @movie.Category
                    </td>
                    <td>
                        @inBillboard
                    </td>
                    <td>
                        @Html.ActionLink(
                            "Detalle",
                            "Details",
                            "Movie",
                            new 
                            { 
                                id = movie.Id,
                                age = 25
                            },
                            new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>